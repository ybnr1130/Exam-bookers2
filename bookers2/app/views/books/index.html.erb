<h1>User info</h1>
<p>Image area</p>
<p>name : <%= @user.name %></p>
<p>introduction<%= @user.introduction %></p>


<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%=f.submit 'Create Book' %>
<% end %>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
                <tr>
                    <!--< attachment_image_tag post_image, :image >-->
                    <td>投稿ユーザー画像：< image_tag('sample-author1.jpg') %></td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td>Opinion：<%= book.body %></td>
                </tr>
        <% end %>
    </tbody>
</table>
