
<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<p>name : <%= @user.name %></p>
<p>introduction : <%= @user.introduction %></p>
<%= link_to "Edit", edit_user_path(@user.id) %>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %>
    <%=f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
                <tr>
                    <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
        <% end %>
    </tbody>
</table>

    


