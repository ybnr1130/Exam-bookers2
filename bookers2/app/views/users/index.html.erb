<p><%= flash[:success] %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ここから部分テンプレート-->
      
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @newbook %>
      
      <!--ここまで部分テンプレート-->
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>