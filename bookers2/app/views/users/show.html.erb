<p><%= flash[:success] %></p>

<!--ここから部分テンプレート-->

<%= render 'users/user', user: @user %>
<%= render 'books/book', book: @book %>

<!--ここまで部分テンプレート-->

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
                <tr>
                    <td>
                        <%= link_to user_path(@user) do %>
                            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                        <% end %>
                    </td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tr>
        <% end %>
    </tbody>
</table>