<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<p>name : <%= @user.name %></p>
<p>introdaction : <%= @user.introduction %></p>


<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<%=f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<p>Image</p>
<p>Title : <%= book.title %></p>
<%= link_to "Show", book_path(book.id) %>
<% end %>
