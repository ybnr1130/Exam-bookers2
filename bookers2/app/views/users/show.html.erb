<p><%= flash[:success] %></p>

<div class="container">
  <div class="row">
　　<div class="col-lg-4">
      <!--ここから部分テンプレート-->

      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @newbook %>

      <!--ここまで部分テンプレート-->
    </div>
    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>